<h2 class= 'text-center text-secondary'>Apartments</h2>

<br>
<table class="table">
  <thead>
        <tr>
          <th scope="col">Number of Apartments</th> 
          <th scope="col">Name of Building</th> 
          <th colspan="3"></th>
        </tr>
   </thead>
        <tbody>
            <% @apartments.each do |apartment| %>
            <tr>
                <td><%= apartment.number %></td> 
                <td><%= apartment.building.name %></td>
                <td><%=link_to 'Show aparment', building_apartment_path(@building.id, apartment.id)%></td>
            </tr> <% end %>
        </tbody> 
</table>

<div class="text-left my-4">
<%= link_to 'Back', building_path(@building.id), class: 'btn btn-secondary' %>
</div>