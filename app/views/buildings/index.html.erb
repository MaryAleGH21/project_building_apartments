<h1 class="text-center text-secondary">Buildings</h1>

<br>
<table class="table">
 <thead>
    <tr>
      <th>Number</th>
      <th>Building</th> 
      <th colspan="3"></th>
    </tr>
 </thead>

  <tbody>
    <% @buildings.each do |building| %>
    <tr>
    <th scope="row">1</th>
      <td><%= building.name %></td>
      <td><%= "id:#{building.id}" %></td>
      <td><%=link_to 'Show', building%></td>
    </tr> 
    <% end %>
  </tbody>
</table>

<div class="text-left my-4">
<%= link_to 'New Building', new_building_path, class: 'btn btn-secondary' %>
</div>