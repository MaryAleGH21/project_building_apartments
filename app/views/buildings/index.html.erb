<h2 class= 'text-center'>Buildings</h2>

<br>
<table class='table'>
  <thead>
        <tr>
            <th scope="col">Name of Building</th>
            <th scope="col">ID Building</th> 
            <th colspan="3"></th>
        </tr> 
  </thead>
    <tbody>
          <% @buildings.each do |building| %>
        <tr>
            <td><%= building.name %></td>
            <td><%= "id:#{building.id}" %></td>
            <td><%=link_to 'Show', building %></td>
        </tr> <% end %>
    </tbody> 
</table>
<%= link_to 'New Building', new_building_path %>