<h2 class= 'text-center text-secondary'>Buildings <%= @building.name %></h2> 

<br>
<table class="table">
  <thead>
        <tr>
          <th scope="col">Number of Apartments</th> 
          <th scope="col">Name of Building</th> 
          <th colspan="3"></th>
        </tr>
   </thead>
        <tbody>
            <% @building.apartments.each do |apartment| %>
            <tr>
                <td><%= apartment.number %></td> 
                <td><%= apartment.building.name %></td>
                <td><%=link_to 'Show', apartment%></td>
            </tr> <% end %>
        </tbody> 
</table>

